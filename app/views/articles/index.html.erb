  <h1 h1 class="text-center mt-4">Listing All Articles</h1>
  <%= render 'article' %>

  <%# normal listing without bootstrap %>
  <%if false%>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
      <tbody>
      <% @articles.each{|article| %>
      <tr>
          <td><%=article.title%></td>
          <td><%=article.description%></td>
          <td><%= link_to 'Show', article_path(article), data: { "turbo-method": :get } %> </td>
          <td> <%= link_to 'Edit', edit_article_path(article), data: { "turbo-method": :get } %></td>
          <td><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, 'turbo-confirm': "Are you surek" } %></td>
        </tr>
      <% } %>
      </tbody>
    </table>
  <p>
    <%= link_to 'Create new Article', new_article_path%></td>
  </p>
<%end%>
<h1 h1 class="text-center mt-4"><%=@article.title%></h1>
<!--<p>
  <%=link_to 'Home Page ', root_path%>
  <%=link_to 'About Page ', about_path%>
</p>-->
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          By <%=@article.user.username if @article.user %>
          <%=link_to gravator_for(@article.user),user_path(@article.user)  %>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%=simple_format(@article.description)%></div>
          <%= link_to "Edit",edit_article_path(@article),data: { "turbo-method": :get },class:"btn btn-outline-info" %>
          <%= link_to "Delete",article_path(@article),data: {"turbo-method": :delete, 'turbo-confirm': "Are you sure"},class:"btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          Created <%=time_ago_in_words(@article.created_at)%>,
          Updated <%=time_ago_in_words(@article.updated_at)%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors',obj:@user%>
      <%= form_with(model:@user,class:"shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f|%>
        <div class="form-group row mt-4">
          <%= f.label :username,class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.text_field :username,class:"form-control shadow rounded",placeholder:"Enter a Username" %>  
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :email ,class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.email_field :email,class:"form-control shadow rounded",placeholder:"Enter to Email" %>  
          </div>
        </div>

         <div class="form-group row mt-4">
          <%= f.label :password ,class:"col-2 col-form-label"%>
          <div class="col-10">
            <%= f.password_field :password,class:"form-control shadow rounded",placeholder:"Enter to Password" %>  
          </div>
        </div>

         <div class="form-group row justify-content-center mt-4">
          <%= f.submit "Sign up", class:"btn btn-outline-light btn-lg"%>
        </div>

      <% end %>
    </div>
    <div class="mb-3 text-center">
      <%= link_to 'Retrun to listing', articles_path, class:"text-center text-color-info"%>
    </div>
  </div>
</div>
